@model TipConcediuViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica date Concediu</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nume" class="control-label"></label>
                <input asp-for="Nume" class="form-control" />
                <span asp-validation-for="Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZileStandard" class="control-label"></label>
                <input asp-for="ZileStandard" class="form-control" />
                <span asp-validation-for="ZileStandard" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Pagina anterioara</a>
                <input type="submit" value="Salveaza" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
